@page "/leaderboard"
@using SpeedwayTyperApp.Shared.Models
@inject HttpClient Http

<RadzenGrid Data="@_users">
    <Columns>
        <RadzenGridColumn TItem="User" Property="UserName" Title="Username" />
        <RadzenGridColumn TItem="User" Property="TotalPoints" Title="Points" />
        <RadzenGridColumn TItem="User" Property="AccurateMatchResults" Title="Accurate Results" />
    </Columns>
</RadzenGrid>

@code {
    private List<User> _users = new List<User>();

    protected override async Task OnInitializedAsync()
    {
        _users = await Http.GetFromJsonAsync<List<User>>("api/Users");
    }
}
